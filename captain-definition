    "FROM python:3.7",
    "RUN mkdir -p /usr/src/app",
    "WORKDIR /usr/src/app",
    "RUN pip install pipenv",
    "COPY ./src/Pipfile /usr/src/app/",
    "COPY ./src/Pipfile.lock /usr/src/app/",
    "RUN pipenv install",
    "COPY ./src /usr/src/app/",
    "EXPOSE 8000",
    "CMD pipenv run gunicorn -b 0.0.0.0:8000 personal.wsgi:application"
